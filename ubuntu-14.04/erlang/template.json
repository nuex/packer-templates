{
  "builders": [
    {
      "ami_name": "ubuntu-trusty-{{timestamp}}",
      "instance_type": "m1.large",
      "region": "us-east-1",
      "source_ami": "ami-018c9568",
      "ssh_username": "ubuntu",
      "tags": {
        "Name": "{{.Name}}"
      },
      "type": "amazon-ebs"
    },
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "4s",
      "disk_size": 40000,
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "http_directory": "../../http",
      "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
      "iso_checksum_type": "md5",
      "iso_url": "http://www.releases.ubuntu.com/14.04/ubuntu-14.04-server-amd64.iso",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'ubuntu'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "ubuntu",
      "ssh_port": 22,
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "ubuntu-14.04_{{.Provider}}-{{timestamp}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "script": "../../scripts/vagrant.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "script": "../../scripts/sous_chef.sh",
      "type": "shell"
    },
    {
      "cookbook_paths": [
        "vendor/cookbooks"
      ],
      "install_command": "sudo -S curl -L https://www.opscode.com/chef/install.sh | {{if .Sudo}}sudo{{end}} bash -s -- -v 11.12.2",
      "json": {},
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'ubuntu' | sudo -S chef-solo --no-color -c {{.ConfigPath}} -j {{.JsonPath}}"
        }
      },
      "run_list": ["recipe[packer-erlang]"],
      "type": "chef-solo"
    },
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ],
      "script": "../../scripts/cleanup.sh",
      "type": "shell"
    }
  ]
}

